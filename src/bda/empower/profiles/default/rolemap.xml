<?xml version="1.0"?>
<rolemap>

  <roles>
    <role name="Coordinator" />
    <role name="Client" />
    <role name="Expert" />
  </roles>

  <permissions>

    <!-- Override permissions -->
    <permission
        acquire="False"
        name="Show Toolbar">
      <role name="Manager" />
      <role name="Site Administrator" />
    </permission>
    <permission
        acquire="False"
        name="Sharing page: Delegate Reader role">
      <role name="Manager" />
      <role name="Site Administrator" />
    </permission>
    <permission
        acquire="False"
        name="Sharing page: Delegate Editor role">
      <role name="Manager" />
      <role name="Site Administrator" />
    </permission>
    <permission
        acquire="False"
        name="plone.restapi: Access Plone user information">
      <role name="Manager" />
      <role name="Coordinator" />
      <role name="Client" />
      <role name="Expert" />
      <role name="Authenticated" />
    </permission>
    <permission
        acquire="False"
        name="plone.restapi: Access Plone vocabularies">
      <role name="Manager"/>
      <role name="Site Administrator"/>
      <role name="Coordinator" />
      <role name="Client" />
      <role name="Expert" />
    </permission>

    <!-- New permissions -->
    <permission
        acquire="True"
        name="bda.empower: Add Contribution">
      <role name="Client" />
      <role name="Coordinator" />
      <role name="Manager" />
    </permission>
    <permission
        acquire="True"
        name="bda.empower: Add Case">
      <role name="Coordinator" />
      <role name="Manager" />
    </permission>
    <permission
        acquire="True"
        name="bda.empower: Modify Client">
      <role name="Coordinator" />
      <role name="Manager" />
    </permission>
    <permission
        acquire="True"
        name="bda.empower: Modify Expert Pool">
      <role name="Coordinator" />
      <role name="Client" />
      <role name="Manager" />
    </permission>
    <permission
        acquire="True"
        name="bda.empower: Modify Coordinators">
      <role name="Coordinator" />
      <role name="Owner" />
    </permission>
    <permission
        acquire="True"
        name="bda.empower: Modify Experts Assigned">
      <role name="Coordinator" />
      <role name="Client" />
      <role name="Owner" />
      <role name="Manager" />
    </permission>

  </permissions>

</rolemap>

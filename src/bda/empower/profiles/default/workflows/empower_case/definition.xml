<?xml version="1.0"?>
<dc-workflow
    description="- Essentially a workflow with no transitions, and only a Private state."
    i18n:attributes="title; description"
    i18n:domain="plone"
    initial_state="private"
    state_variable="review_state"
    title="bda.empower Case Workflow"
    workflow_id="empower_case"
    xmlns:i18n="http://xml.zope.org/namespaces/i18n">

  <!-- Permissions -->
  <permission>Access contents information</permission>
  <permission>Add portal content</permission>
  <permission>Modify portal content</permission>
  <permission>View</permission>
  <permission>bda.empower: Add Contribution</permission>
  <permission>bda.empower: Modify Client</permission>
  <permission>bda.empower: Modify Coordinators</permission>
  <permission>bda.empower: Modify Expert Pool</permission>
  <permission>bda.empower: Modify Workspace Type</permission>

  <!-- States -->
  <state
      i18n:attributes="title"
      state_id="private"
      title="Private">
    <description i18n:translate="">
    Can only be seen internally.
  </description>
    <permission-map
        acquired="False"
        name="Access contents information">
      <permission-role>Client</permission-role>
      <permission-role>Coordinator</permission-role>
      <permission-role>Expert</permission-role>
      <permission-role>Manager</permission-role>
    </permission-map>
    <permission-map
        acquired="False"
        name="Modify portal content">
      <permission-role>Coordinator</permission-role>
      <permission-role>Client</permission-role>
      <permission-role>Manager</permission-role>
    </permission-map>
    <permission-map
        acquired="False"
        name="Add portal content">
      <permission-role>Client</permission-role>
      <permission-role>Coordinator</permission-role>
      <permission-role>Expert</permission-role>
      <permission-role>Manager</permission-role>
    </permission-map>
    <permission-map
        acquired="False"
        name="View">
      <permission-role>Client</permission-role>
      <permission-role>Coordinator</permission-role>
      <permission-role>Expert</permission-role>
      <permission-role>Manager</permission-role>
    </permission-map>
    <permission-map
        acquired="False"
        name="bda.empower: Add Contribution">
      <permission-role>Client</permission-role>
      <permission-role>Coordinator</permission-role>
      <permission-role>Expert</permission-role>
      <permission-role>Manager</permission-role>
    </permission-map>
    <permission-map
        acquired="False"
        name="bda.empower: Modify Client">
      <permission-role>Coordinator</permission-role>
      <permission-role>Manager</permission-role>
    </permission-map>
    <permission-map
        acquired="False"
        name="bda.empower: Modify Coordinators">
      <permission-role>Coordinator</permission-role>
      <permission-role>Manager</permission-role>
    </permission-map>
    <permission-map
        acquired="False"
        name="bda.empower: Modify Expert Pool">
      <permission-role>Coordinator</permission-role>
      <permission-role>Client</permission-role>
      <permission-role>Manager</permission-role>
    </permission-map>
    <permission-map
        acquired="False"
        name="bda.empower: Modify Workspace Type">
      <permission-role>Manager</permission-role>
    </permission-map>
  </state>

  <!-- Variables -->
  <variable
      for_catalog="False"
      for_status="True"
      update_always="True"
      variable_id="action">
    <description i18n:translate="">Previous transition</description>
    <default>
      <expression>transition/getId|nothing</expression>
    </default>
    <guard></guard>
  </variable>
  <variable
      for_catalog="False"
      for_status="True"
      update_always="True"
      variable_id="actor">
    <description i18n:translate="">
    The ID of the user who performed the previous transition
  </description>
    <default>
      <expression>user/getId</expression>
    </default>
    <guard></guard>
  </variable>
  <variable
      for_catalog="False"
      for_status="True"
      update_always="True"
      variable_id="comments">
    <description i18n:translate="">
    Comment about the last transition
  </description>
    <default>
      <expression>python:state_change.kwargs.get('comment', '')</expression>
    </default>
    <guard></guard>
  </variable>
  <variable
      for_catalog="False"
      for_status="False"
      update_always="False"
      variable_id="review_history">
    <description i18n:translate="">
    Provides access to workflow history
  </description>
    <default>
      <expression>state_change/getHistory</expression>
    </default>
    <guard>
      <guard-permission>Request review</guard-permission>
      <guard-permission>Review portal content</guard-permission>
    </guard>
  </variable>
  <variable
      for_catalog="False"
      for_status="True"
      update_always="True"
      variable_id="time">
    <description i18n:translate="">
    When the previous transition was performed
  </description>
    <default>
      <expression>state_change/getDateTime</expression>
    </default>
    <guard></guard>
  </variable>

</dc-workflow>

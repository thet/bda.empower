<article class="contribution" tal:define="data python:view.record">

  <header>
    <h1 tal:condition="data/title">${data/title}</h1>
    <p tal:condition="data/description">${data/description}</p>
    <aside>
      <div><label i18n:translate="created">Created</label>: ${data/created}</div>
      <div><label i18n:translate="modified">Modified</label>: ${data/modified}</div>
    </aside>
  </header>

  <tal:txt replace="structure data/text | nothing" />

  <footer>
    <label i18n:translate="shared_with">Shared With</label>
    <ul>
      <li>a</li>
      <li>b</li>
    </ul>
    <button>Create Action</button>
    <button>Confirm Read</button>
    <a href="${context/absolute_url}//++addimmediate++Contribution" class="pat-plone-modal">Reply</a>
    <a href="${context/absolute_url}/@@edit" class="pat-plone-modal">Edit</a>
  </footer>

</article>

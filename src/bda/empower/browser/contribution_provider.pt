<article class="contribution workspace-${data/workspace}" tal:define="data python:view.record">
  <header>
    <a name="${data/id}" />
    <h3 tal:condition="data/title">${data/title} (id=${data/id})</h3>
    <aside>
      <div><label i18n:translate="created">Created</label>: ${data/created}</div>
      <div><label i18n:translate="modified">Modified</label>: ${data/modified}</div>
      <div><label i18n:translate="workspace">Workspace</label>: ${data/workspace_title}</div>
    </aside>
  </header>

  <tal:txt replace="structure data/text | nothing" />

  <footer>
    <label i18n:translate="shared_with">Shared With</label>
    <ul>
      <li>a</li>
      <li>b</li>
    </ul>
    <a href="#"
       tal:condition="python: True"
       class="plone-btn plone-btn-success plone-btn-sm pat-plone-modal"
       data-pat-plone-modal='{"actionOptions": {"timeout": 30000}}'><span class="glyphicon glyphicon-ok"></span> confirm read</a>
    <a href="${data/reply_url}"
       tal:condition="python: True"
       class="plone-btn plone-btn-success plone-btn-sm pat-plone-modal"
       data-pat-plone-modal='{"actionOptions": {"timeout": 30000}}'><span class="glyphicon glyphicon-plus-sign"></span> Reply</a>
    <a href="${data/edit_url}"
       tal:condition="python: True"
       class="plone-btn plone-btn-success plone-btn-sm pat-plone-modal"
       data-pat-plone-modal='{"actionOptions": {"timeout": 30000}}'><span class="glyphicon glyphicon-pencil"></span> Edit</a>
  </footer>

</article>

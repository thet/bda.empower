<tal:def
    define="path options/path;
            contributions python:view.itemtree.get(path, []);
            level options/level|python:0"
    condition="contributions"
    i18n:domain="bda.empower">

<div class="threaditem level-${level}"
     tal:repeat="contribution contributions">

  <div tal:replace="structure provider: contribution_provider"/>
  <!-- <div tal:content="python:contribution['ob'].absolute_url()"/> -->

  <tal:subthread
      define="subthread python:view.recurse(path=path + '/' + contribution['id'], level=level+1)"
      replace="structure subthread"
      condition="subthread"/>

</div>

</tal:def>

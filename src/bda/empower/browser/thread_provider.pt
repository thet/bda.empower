<tal:def
    define="contributions python:view.contributions"
    i18n:domain="bda.empower">

  <div class="threaditem level-${view/level}"
       tal:repeat="contribution contributions">

    <div tal:replace="structure provider: contribution_provider"/>

    <hr />
    <tal:set tal:define="thread_id python:contribution.getId()">
        <div tal:replace="structure provider: thread_provider"/>
    </tal:set>

  </div>

</tal:def>
